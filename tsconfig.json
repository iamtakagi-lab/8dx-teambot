{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./out",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "@types/node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*", "src/util"
    ]
}